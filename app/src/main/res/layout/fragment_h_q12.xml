<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard_activity.activity.assessment.questions.hard.HQ12">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6"
        android:id="@+id/gl_6h"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5"
        android:id="@+id/gl_5v"/>

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_6h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_rawRes="@raw/first_aid"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_selection_1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/answer_selection_bg"
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="@id/gl_6h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_5v"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="DANGER"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/spartan_bold"
            android:textSize="14sp"
            android:padding="10dp"
            android:id="@+id/tv_answer_1"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_selection_2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/answer_selection_bg"
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="@id/gl_6h"
        app:layout_constraintStart_toStartOf="@id/gl_5v"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="FIRST AID"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/spartan_bold"
            android:textSize="14sp"
            android:padding="10dp"
            android:id="@+id/tv_answer_2"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_selection_3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/answer_selection_bg"
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/btn_selection_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_5v"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="CALL FOR HELP"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/spartan_bold"
            android:textSize="14sp"
            android:padding="10dp"
            android:id="@+id/tv_answer_3"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_selection_4"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/answer_selection_bg"
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/btn_selection_2"
        app:layout_constraintStart_toStartOf="@id/gl_5v"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="EARTHQUAKE"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/spartan_bold"
            android:textSize="14sp"
            android:padding="10dp"
            android:id="@+id/tv_answer_4"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>