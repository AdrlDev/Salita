<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:keyHeight="60dp"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyPreviewOffset="12dp"
    android:keyPreviewLayout="@layout/preview_layout">

    <!-- Row 1: 1234567890 -->
    <Row>
        <Key android:codes="49" android:keyLabel="1" android:keyIcon="@drawable/number_1"/>
        <Key android:codes="50" android:keyLabel="2" android:keyIcon="@drawable/number_2"/>
        <Key android:codes="51" android:keyLabel="3" android:keyIcon="@drawable/number_3"/>
        <Key android:codes="52" android:keyLabel="4" android:keyIcon="@drawable/number_4"/>
        <Key android:codes="53" android:keyLabel="5" android:keyIcon="@drawable/number_5"/>
        <Key android:codes="54" android:keyLabel="6" android:keyIcon="@drawable/number_6"/>
        <Key android:codes="55" android:keyLabel="7" android:keyIcon="@drawable/number_7"/>
        <Key android:codes="56" android:keyLabel="8" android:keyIcon="@drawable/number_8"/>
        <Key android:codes="57" android:keyLabel="9" android:keyIcon="@drawable/number_9"/>
        <Key android:codes="48" android:keyLabel="0" android:keyIcon="@drawable/number_zero"/>
    </Row>

    <!-- Row 2: Special characters (Centered) -->
    <Row>
        <Key android:codes="64" android:keyLabel="@" android:keyWidth="11%p" android:keyIcon="@drawable/at_sign"/>
        <Key android:codes="35" android:keyLabel="#" android:keyWidth="11%p" android:keyIcon="@drawable/number_sign"/>
        <Key android:codes="36" android:keyLabel="$" android:keyWidth="11%p" android:keyIcon="@drawable/dollar_sign"/>
        <Key android:codes="37" android:keyLabel="%" android:keyWidth="11%p" android:keyIcon="@drawable/percent_symbol"/>
        <Key android:codes="38" android:keyLabel="&amp;" android:keyWidth="11%p" android:keyIcon="@drawable/and_sign"/>
        <Key android:codes="42" android:keyLabel="*" android:keyWidth="11%p" android:keyIcon="@drawable/astirist_symbol"/>
        <Key android:codes="95" android:keyLabel="_" android:keyWidth="11%p" android:keyIcon="@drawable/under_score_symbol"/>
        <Key android:codes="61" android:keyLabel="=" android:keyWidth="11%p" android:keyIcon="@drawable/equals_sign"/>
        <Key android:codes="92" android:keyLabel="\\" android:keyWidth="12%p" android:keyIcon="@drawable/back_slash_symbol"/>
    </Row>

    <!-- Row 3: Shift, Symbols, Delete -->
    <Row>
        <Key android:codes="40" android:keyLabel="(" android:keyIcon="@drawable/open_parentisis"/>
        <Key android:codes="41" android:keyLabel=")" android:keyIcon="@drawable/close_parentisis"/>
        <Key android:codes="43" android:keyLabel="+" android:keyIcon="@drawable/plus_sign"/>
        <Key android:codes="59" android:keyLabel=";" android:keyIcon="@drawable/semi_colon_symbol"/>
        <Key android:codes="39" android:keyLabel="'" android:keyIcon="@drawable/single_qote_symbol"/>
        <Key android:codes="34" android:keyLabel="&quot;" android:keyIcon="@drawable/qotation_symbol"/>
        <Key android:codes="45" android:keyLabel="-" android:keyIcon="@drawable/minus_sign"/>
        <Key android:codes="44" android:keyLabel="," android:keyIcon="@drawable/comma_sign"/>
        <Key android:codes="-5" android:keyLabel="Del" android:keyWidth="20%p" />
    </Row>

    <!-- Row 4: Space, ABC, .?! -->
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-3" android:keyLabel="ABC" android:keyWidth="20%p" />
        <Key android:codes="46" android:keyLabel="." android:keyWidth="10%p" android:keyIcon="@drawable/dot_sign"/>
        <Key android:codes="32" android:keyLabel="Space" android:keyWidth="40%p" />
        <Key android:codes="63" android:keyLabel="?" android:keyWidth="10%p" android:keyIcon="@drawable/question_mark_symbol"/>
        <Key android:codes="33" android:keyLabel="!" android:keyWidth="10%p" android:keyIcon="@drawable/exclamation_mark"/>
        <Key android:codes="10" android:keyLabel="Done" android:keyWidth="10%p" />
    </Row>

</Keyboard>
