<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:keyHeight="60dp"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyPreviewOffset="12dp"
    android:keyPreviewLayout="@layout/preview_layout">

    <!-- Row 1: QWERTYUIOP -->
    <Row>
        <Key android:codes="113" android:keyLabel="q" android:keyIcon="@drawable/letter_q"/>
        <Key android:codes="119" android:keyLabel="w" android:keyIcon="@drawable/letter_w"/>
        <Key android:codes="101" android:keyLabel="e" android:keyIcon="@drawable/letter_e"/>
        <Key android:codes="114" android:keyLabel="r" android:keyIcon="@drawable/letter_r"/>
        <Key android:codes="116" android:keyLabel="t" android:keyIcon="@drawable/letter_t"/>
        <Key android:codes="121" android:keyLabel="y" android:keyIcon="@drawable/letter_y"/>
        <Key android:codes="117" android:keyLabel="u" android:keyIcon="@drawable/letter_u"/>
        <Key android:codes="105" android:keyLabel="i" android:keyIcon="@drawable/letter_i"/>
        <Key android:codes="111" android:keyLabel="o" android:keyIcon="@drawable/letter_o"/>
        <Key android:codes="112" android:keyLabel="p" android:keyIcon="@drawable/letter_p"/>
    </Row>

    <!-- Row 2: ASDFGHJKL -->
    <Row>
        <Key android:codes="97" android:keyLabel="a" android:keyWidth="20%p" android:keyIcon="@drawable/letter_a" />
        <Key android:codes="115" android:keyLabel="s" android:keyWidth="20%p" android:keyIcon="@drawable/letter_s"/>
        <Key android:codes="100" android:keyLabel="d" android:keyWidth="20%p" android:keyIcon="@drawable/letter_d"/>
        <Key android:codes="102" android:keyLabel="f" android:keyWidth="20%p" android:keyIcon="@drawable/letter_f"/>
        <Key android:codes="103" android:keyLabel="g" android:keyWidth="20%p" android:keyIcon="@drawable/letter_g"/>
        <Key android:codes="104" android:keyLabel="h" android:keyWidth="20%p" android:keyIcon="@drawable/letter_h"/>
        <Key android:codes="106" android:keyLabel="j" android:keyWidth="20%p" android:keyIcon="@drawable/letter_j"/>
        <Key android:codes="107" android:keyLabel="k" android:keyWidth="20%p" android:keyIcon="@drawable/letter_k"/>
        <Key android:codes="108" android:keyLabel="l" android:keyWidth="20%p" android:keyIcon="@drawable/letter_l"/>
    </Row>

    <!-- Row 3: Shift, ZXCVBNM, Delete -->
    <Row>
        <Key android:codes="-1" android:keyLabel="Shift" android:keyWidth="15%p" android:isModifier="true" />
        <Key android:codes="122" android:keyLabel="z" android:keyIcon="@drawable/letter_z"/>
        <Key android:codes="120" android:keyLabel="x" android:keyIcon="@drawable/letter_x"/>
        <Key android:codes="99" android:keyLabel="c" android:keyIcon="@drawable/letter_c"/>
        <Key android:codes="118" android:keyLabel="v" android:keyIcon="@drawable/letter_v"/>
        <Key android:codes="98" android:keyLabel="b" android:keyIcon="@drawable/letter_b"/>
        <Key android:codes="110" android:keyLabel="n" android:keyIcon="@drawable/letter_n"/>
        <Key android:codes="109" android:keyLabel="m" android:keyIcon="@drawable/letter_m"/>
        <Key android:codes="-5" android:keyLabel="Del" android:keyWidth="15%p" />
    </Row>

    <!-- Row 4: Space, 123, .?! -->
    <Row>
        <Key android:codes="-2" android:keyLabel="@string/key_123" android:keyWidth="20%p" />
        <Key android:codes="46" android:keyLabel="@string/key_dot" android:keyWidth="10%p" android:keyIcon="@drawable/dot_sign"/>
        <Key android:codes="32" android:keyLabel="Space" android:keyWidth="40%p" />
        <Key android:codes="63" android:keyLabel="@string/key_question" android:keyWidth="10%p" android:keyIcon="@drawable/question_mark_symbol"/>
        <Key android:codes="33" android:keyLabel="@string/key_exclamation" android:keyWidth="10%p" android:keyIcon="@drawable/exclamation_mark"/>
        <Key android:codes="10" android:keyLabel="Done" android:keyWidth="10%p" />
    </Row>

</Keyboard>
